<!DOCTYPE html>
<html>
  <head>
    <title>ExamenPedroGrand</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="nav-bar">
    <div class="inside-nav">
      <a class="nav-bar-button" href="/">Home</a>
      <a class="nav-bar-button" href="/catalog">Catalog</a>
      <a class="nav-bar-button" href="/shopping">Shopping Card</a>
      <% if user_signed_in? %>
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-bar-button" %>
      <% else %>
        <a class="nav-bar-button" href="/users/sign_in">Log In</a>
      <% end %>
      <a></a>
    </div>
  </div>
  <body>
    <%= yield %>
  </body>
</html>
